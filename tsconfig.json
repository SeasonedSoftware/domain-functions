{
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "./dist/**/*",
    "**/*.test.*",
    "./examples",
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "declaration": true,
    "outDir": "./dist/",
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": "."
  }
}
