{
  "version": "2.6.0",
  "tasks": {
    "test": "deno test --allow-env --allow-net src",
    "publish": "deno task build-npm && cd npm/ && npm publish",
    "build-npm": "deno run -A scripts/build-npm.ts",
    "docs": "deno doc --html --name='domain-functions' ./mod.ts"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "exclude": [
        "no-explicit-any",
        "ban-types"
      ]
    }
  },
  "compilerOptions": {
    "types": ["./src/test.d.ts"]
  }
}
